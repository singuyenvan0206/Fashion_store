<Window x:Class="WpfApp1.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="450" Width="420" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#D6336C" Padding="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🔐" FontSize="24" Margin="0,0,12,0"/>
                <StackPanel>
                    <TextBlock Text="ĐỔI MẬT KHẨU" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Cập nhật mật khẩu tài khoản của bạn" 
                               FontSize="12" 
                               Foreground="#FFE6F0" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" Margin="30" CornerRadius="12" Padding="30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                
                <!-- Username Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="👤 Tên đăng nhập" 
                               FontWeight="SemiBold" 
                               FontSize="14" 
                               Foreground="#37474F" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Height="40"/>
                </StackPanel>

                <!-- Old Password Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="🔒 Mật khẩu hiện tại" 
                               FontWeight="SemiBold" 
                               FontSize="14" 
                               Foreground="#37474F" 
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="OldPasswordBox" 
                                 Height="40"/>
                </StackPanel>

                <!-- New Password Field -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="🔑 Mật khẩu mới" 
                               FontWeight="SemiBold" 
                               FontSize="14" 
                               Foreground="#37474F" 
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="NewPasswordBox" 
                                 Height="40"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="🔄 Đổi Mật Khẩu" 
                            Width="160" 
                            Height="40" 
                            Background="#4CAF50" 
                            Click="ChangePassword_Click"
                            Margin="0,0,12,0"/>
                    <Button Content="❌ Hủy" 
                            Width="100" 
                            Height="40" 
                            Background="#F44336" 
                            Click="Cancel_Click"/>
                </StackPanel>
                
                <!-- Info Text -->
                <TextBlock Text="💡 Lưu ý: Mật khẩu mới phải có ít nhất 6 ký tự" 
                           FontSize="12" 
                           Foreground="#666666" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"/>
        </StackPanel>
        </Border>
    </Grid>
</Window>
