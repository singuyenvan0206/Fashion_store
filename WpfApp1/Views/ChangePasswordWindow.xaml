<Window x:Class="WpfApp1.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="550" Width="500" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="450">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#D6336C" Padding="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🔐" FontSize="24" Margin="0,0,12,0"/>
                <StackPanel>
                    <TextBlock Text="ĐỔI MẬT KHẨU" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Cập nhật mật khẩu tài khoản của bạn" 
                               FontSize="12" 
                               Foreground="#FFE6F0" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="12" Padding="30">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" MaxWidth="600">
                
                <!-- Username Field -->
                <StackPanel Margin="0,10,0,25">
                    <TextBlock Text="👤 Tên đăng nhập" 
                               FontWeight="SemiBold" 
                               FontSize="15" 
                               Foreground="#37474F" 
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Height="45"
                             MinWidth="300"
                             HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Old Password Field -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="🔒 Mật khẩu hiện tại" 
                               FontWeight="SemiBold" 
                               FontSize="15" 
                               Foreground="#37474F" 
                               Margin="0,0,0,10"/>
                    <PasswordBox x:Name="OldPasswordBox" 
                                 Height="45"
                                 MinWidth="300"
                                 HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- New Password Field -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="🔑 Mật khẩu mới" 
                               FontWeight="SemiBold" 
                               FontSize="15" 
                               Foreground="#37474F" 
                               Margin="0,0,0,10"/>
                    <PasswordBox x:Name="NewPasswordBox" 
                                 Height="45"
                                 MinWidth="300"
                                 HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Confirm Password Field -->
                <StackPanel Margin="0,0,0,35">
                    <TextBlock Text="🔑 Xác nhận mật khẩu mới" 
                               FontWeight="SemiBold" 
                               FontSize="15" 
                               Foreground="#37474F" 
                               Margin="0,0,0,10"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Height="45"
                                 MinWidth="300"
                                 HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Info Box -->
                <Border Background="#FFF3E0" BorderBrush="#FFB300" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="💡 Yêu cầu mật khẩu:" 
                                   FontWeight="Bold" 
                                   FontSize="13" 
                                   Foreground="#F57C00" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="• Tối thiểu 6 ký tự" 
                                   FontSize="12" 
                                   Foreground="#666" 
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="• Phải khác mật khẩu hiện tại" 
                                   FontSize="12" 
                                   Foreground="#666" 
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="• Hai mật khẩu mới phải giống nhau" 
                                   FontSize="12" 
                                   Foreground="#666"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" 
                            Content="🔄 Đổi Mật Khẩu" 
                            Height="45" 
                            Background="#4CAF50" 
                            Click="ChangePassword_Click"
                            Margin="0,0,10,0"/>
                    <Button Grid.Column="1" 
                            Content="❌ Hủy" 
                            Height="45" 
                            Background="#F44336" 
                            Click="Cancel_Click"
                            Margin="10,0,0,0"/>
                </Grid>
            </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
