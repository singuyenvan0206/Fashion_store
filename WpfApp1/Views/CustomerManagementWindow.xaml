<Window x:Class="WpfApp1.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Khách Hàng" Height="800" Width="1200"
        MinWidth="1200" MinHeight="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1CB5E0" Padding="20">
            <TextBlock Text="👥 Quản Lý Khách Hàng" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Input Form -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Thông Tin Khách Hàng" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#1CB5E0" 
                                   Margin="0,0,0,20"/>
                        
                        <!-- Customer Name -->
                        <TextBlock Text="Tên Khách Hàng *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="CustomerNameTextBox" Margin="0,0,0,15"/>
                        
                        <!-- Phone -->
                        <TextBlock Text="Số Điện Thoại" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="PhoneTextBox" Margin="0,0,0,15"/>
                        
                        <!-- Email -->
                        <TextBlock Text="Địa Chỉ Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" Margin="0,0,0,15"/>
                        
                        <!-- Customer Type removed -->
                        <TextBlock Text="Loại Khách Hàng" FontWeight="SemiBold" Margin="0,0,0,5" Visibility="Collapsed"/>
                        <ComboBox x:Name="CustomerTypeComboBox" Margin="0,0,0,15" Visibility="Collapsed"/>

                        <!-- Loyalty Tier & Points -->
                        <TextBlock Text="Hạng thành viên" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="TierComboBox" Margin="0,0,0,10">
                            <ComboBoxItem Content="Regular" IsSelected="True"/>
                            <ComboBoxItem Content="Silver"/>
                            <ComboBoxItem Content="Gold"/>
                            <ComboBoxItem Content="Platinum"/>
                        </ComboBox>
                        <TextBlock Text="Điểm tích lũy" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="PointsTextBox" Margin="0,0,0,15" Text="0"/>

                        <!-- Segment removed -->
                        
                        <!-- Address -->
                        <TextBlock Text="Địa Chỉ" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="AddressTextBox" 
                                 Height="41" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,20"/>
                        
                        <!-- Action Buttons -->
                        <TextBlock Text="Thao Tác" FontWeight="Bold" FontSize="16" Foreground="#1CB5E0" Margin="0,10,0,10"/>
                        
                        <!-- Primary Actions -->
                        <UniformGrid Columns="2" Margin="0,0,0,10">
                            <Button Content="➕ Thêm" 
                                    Background="#4CAF50" 
                                    Foreground="White" 
                                    Click="AddButton_Click"
                                    Margin="0,0,5,5"/>
                            <Button Content="✏️ Cập Nhật" 
                                    Background="#2196F3" 
                                    Foreground="White" 
                                    Click="UpdateButton_Click"
                                    Margin="5,0,0,5"/>
                        </UniformGrid>
                        
                        <UniformGrid Columns="2" Margin="0,0,0,10">
                            <Button Content="🏆 Cập nhật hạng" 
                                    Background="#9C27B0" 
                                    Foreground="White" 
                                    Click="UpdateLoyaltyButton_Click"
                                    Margin="0,0,5,5"/>
                            <Button Content="🗑️ Xóa" 
                                    Background="#F44336" 
                                    Foreground="White" 
                                    Click="DeleteButton_Click"
                                    Margin="5,0,0,5"/>
                        </UniformGrid>
                        
                        <!-- Secondary Actions -->
                        <TextBlock Text="Quản Lý Dữ Liệu" FontWeight="Bold" FontSize="14" Foreground="#666" Margin="0,15,0,10"/>
                        
                        <Button Content="⚙️ Cài đặt hạng thành viên" 
                                Background="#673AB7" 
                                Foreground="White" 
                                Click="TierSettingsButton_Click"
                                Margin="0,0,0,5"/>
                        
                        <UniformGrid Columns="2" Margin="0,5,0,10">
                            <Button Content="📥 Nhập CSV" 
                                    Background="#FF9800" 
                                    Foreground="White" 
                                    Click="ImportCsvButton_Click"
                                    Margin="0,0,5,5"/>
                            <Button Content="📤 Xuất CSV" 
                                    Background="#FF9800" 
                                    Foreground="White"
                                    Click="ExportCsvButton_Click"
                                    Margin="5,0,0,5"/>
                        </UniformGrid>
                        
                        <Button Content="🗑️ Xóa Tất Cả" 
                                Background="#9E9E9E" 
                                Foreground="White" 
                                Click="DeleteAllCustomersButton_Click"
                                Margin="0,5,0,0"/>

                        <!-- Status -->
                        <TextBlock x:Name="StatusTextBlock" 
                                   Text="Sẵn sàng" 
                                   FontSize="12" 
                                   Foreground="#666666" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,15,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Customer List with Tabs -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="15">
                <TabControl>
                    <!-- Customer List Tab -->
                    <TabItem Header="📋 Danh Sách Khách Hàng" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="159">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Search Section -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="🔍 Tìm Kiếm Khách Hàng" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1CB5E0"
                                           VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="SearchTextBox" 
                                             Width="250" 
                                             Margin="0,0,10,0"
                                             TextChanged="SearchTextBox_TextChanged"
                                             VerticalContentAlignment="Center"
                                             FontSize="14"/>
                                    <Button Content="🔍 Tìm" 
                                            Width="80" 
                                            Background="#FF9800" 
                                            Foreground="White"
                                            Click="SearchButton_Click"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Customer DataGrid with Pagination -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <DataGrid Grid.Row="0"
                                          x:Name="CustomerDataGrid" 
                                          AutoGenerateColumns="False" 
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          SelectionChanged="CustomerDataGrid_SelectionChanged"
                                          GridLinesVisibility="Horizontal"
                                          AlternatingRowBackground="#F8F9FA"
                                          RowHeight="35">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" SortMemberPath="Id" Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="👤 Tên Khách Hàng" Binding="{Binding Name}" SortMemberPath="Name" Width="180"/>
                                        <DataGridTextColumn Header="📞 Điện Thoại" Binding="{Binding Phone}" SortMemberPath="Phone" Width="120"/>
                                        <DataGridTextColumn Header="📧 Email" Binding="{Binding Email}" SortMemberPath="Email" Width="200"/>
                                        <DataGridTextColumn Header="🏆 Hạng" Binding="{Binding Tier}" SortMemberPath="Tier" Width="100">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="⭐ Điểm" Binding="{Binding Points}" SortMemberPath="Points" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="#FF9800"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="🏠 Địa Chỉ" Binding="{Binding Address}" SortMemberPath="Address" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Customer Pagination Controls -->
                                <Border Grid.Row="1" Background="#F8F9FA" Padding="15" Margin="0,10,0,0" CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Page Info -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="📄 Trang:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                            <TextBlock x:Name="CustomerPageInfoTextBlock" Text="1 / 1" FontWeight="Bold" Foreground="#1CB5E0"/>
                                            <TextBlock Text=" • " Margin="10,0"/>
                                            <TextBlock Text="👥 Tổng:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                            <TextBlock x:Name="TotalCustomersTextBlock" Text="0 khách hàng" FontWeight="Bold" Foreground="#FF9800"/>
                                        </StackPanel>
                                        
                                        <!-- Page Navigation -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button x:Name="CustomerFirstPageButton" Content="⏮️" Width="35" Height="30" 
                                                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                    Click="CustomerFirstPageButton_Click" Margin="0,0,5,0"/>
                                            <Button x:Name="CustomerPrevPageButton" Content="◀️" Width="35" Height="30" 
                                                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                    Click="CustomerPrevPageButton_Click" Margin="0,0,5,0"/>
                                            <TextBox x:Name="CustomerCurrentPageTextBox" Width="50" Height="30" 
                                                     TextAlignment="Center" VerticalContentAlignment="Center"
                                                     FontWeight="Bold" Margin="0,0,5,0"
                                                     KeyDown="CustomerCurrentPageTextBox_KeyDown"/>
                                            <Button x:Name="CustomerNextPageButton" Content="▶️" Width="35" Height="30" 
                                                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                    Click="CustomerNextPageButton_Click" Margin="0,0,5,0"/>
                                            <Button x:Name="CustomerLastPageButton" Content="⏭️" Width="35" Height="30" 
                                                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                                                    Click="CustomerLastPageButton_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </TabItem>
                    
                    <!-- Purchase History Tab -->
                    <TabItem Header="🛒 Lịch Sử Mua Hàng">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="📊 Lịch Sử Giao Dịch" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#1CB5E0" 
                                       Margin="0,0,0,15"/>
                            
                            <DataGrid Grid.Row="1"
                                      x:Name="PurchaseHistoryDataGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      AlternatingRowBackground="#F8F9FA"
                                      RowHeight="35">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="🧾 Mã HĐ" Binding="{Binding InvoiceId}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="📅 Ngày Mua" Binding="{Binding CreatedAt}" Width="180"/>
                                    <DataGridTextColumn Header="📦 Số Mặt Hàng" Binding="{Binding ItemCount}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="💰 Tổng Tiền" Binding="{Binding Total}" Width="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
