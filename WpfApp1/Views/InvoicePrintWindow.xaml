<Window x:Class="WpfApp1.InvoicePrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xem Trước In Hóa Đơn" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Print Controls -->
        <Border Grid.Row="0" Background="#1CB5E0" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🖨️ Xem Trước In Hóa Đơn" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" - Kiểm tra trước khi in" FontSize="12" Foreground="#E3F2FD" Margin="8,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PrintButton" Content="🖨️ In Hóa Đơn" Width="120" Height="36" 
                            Background="#4CAF50" Foreground="White" FontWeight="SemiBold" Click="PrintButton_Click" Margin="0,0,8,0"/>
                    <Button x:Name="CloseButton" Content="❌ Đóng" Width="100" Height="36" 
                            Background="#F44336" Foreground="White" FontWeight="SemiBold" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Invoice Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Border Background="White" Padding="50" Margin="20">
                <Grid x:Name="InvoicePreviewRoot" Width="800">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Company Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="CompanyNameText" Text="🏢 CÔNG TY TNHH ABC" 
                                       FontSize="26" FontWeight="Bold" Foreground="#1A237E" Margin="0,0,0,8"/>
                            <TextBlock x:Name="CompanySloganText" Text="💼 Chất lượng - Uy tín - Phục vụ tận tâm" 
                                       FontSize="14" Foreground="#3949AB" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="📍" FontSize="12" Foreground="#5C6BC0" Margin="0,0,4,0"/>
                                <TextBlock x:Name="CompanyAddressText" Text="123 Đường Kinh Doanh, Quận 1" 
                                           FontSize="12" Foreground="#37474F" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="🏙️" FontSize="12" Foreground="#5C6BC0" Margin="0,0,4,0"/>
                                <TextBlock x:Name="CompanyCityText" Text="TP. Hồ Chí Minh, Việt Nam" 
                                           FontSize="12" Foreground="#37474F" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="📞" FontSize="12" Foreground="#5C6BC0" Margin="0,0,4,0"/>
                                <TextBlock x:Name="CompanyPhoneText" Text="(028) 1234-5678" 
                                           FontSize="12" Foreground="#37474F" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="📧" FontSize="12" Foreground="#5C6BC0" Margin="0,0,4,0"/>
                                <TextBlock x:Name="CompanyEmailText" Text="info@abc-company.com" 
                                           FontSize="12" Foreground="#37474F" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🌐" FontSize="12" Foreground="#5C6BC0" Margin="0,0,4,0"/>
                                <TextBlock Text="www.abc-company.com" 
                                           FontSize="12" Foreground="#37474F" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Invoice Info -->
                        <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="8" Padding="16" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Right">
                                <TextBlock Text="🧾 HÓA ĐƠN BÁN HÀNG" FontSize="24" FontWeight="Bold" 
                                           Foreground="#D32F2F" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="📄 Số HD:" FontWeight="Bold" Margin="0,0,12,8" Foreground="#37474F"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="InvoiceNumberText" Text="#HD001" Margin="0,0,0,8" 
                                               FontWeight="Bold" Foreground="#1976D2" FontSize="14"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="📅 Ngày:" FontWeight="Bold" Margin="0,0,12,8" Foreground="#37474F"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="InvoiceDateText" Text="01/01/2024" Margin="0,0,0,8" 
                                               FontWeight="SemiBold" Foreground="#2E7D32"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="🕐 Giờ:" FontWeight="Bold" Margin="0,0,12,8" Foreground="#37474F"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="InvoiceTimeText" Text="10:30 AM" Margin="0,0,0,8" 
                                               FontWeight="SemiBold" Foreground="#2E7D32"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="👤 NV:" FontWeight="Bold" Margin="0,0,12,0" Foreground="#37474F"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="EmployeeNameText" Text="" Margin="0,0,0,0" 
                                               FontWeight="SemiBold" Foreground="#2E7D32"/>
                                </Grid>
                                
                                <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="0,12,0,0">
                                    <TextBlock x:Name="InvoiceForText" Text="💼 Giao dịch bán hàng" 
                                               FontSize="12" Foreground="#1976D2" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Customer Section (Simplified) -->
                    <Border Grid.Row="1" Background="#E8F5E8" CornerRadius="8" Padding="20" Margin="0,0,0,20" BorderBrush="#4CAF50" BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="👤" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="THÔNG TIN KHÁCH HÀNG" FontSize="16" FontWeight="Bold" 
                                           Foreground="#2E7D32"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Tên khách hàng:" FontSize="12" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CustomerNameText" Text="Khách lẻ"
                                               FontSize="14" FontWeight="SemiBold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Địa chỉ:" FontSize="12" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CustomerAddressText" Text="Không có" 
                                               FontSize="12" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Số điện thoại:" FontSize="12" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CustomerPhoneText" Text="Không có" 
                                               FontSize="14" FontWeight="SemiBold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Email:" FontSize="12" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CustomerEmailText" Text="Không có" 
                                               FontSize="12" Foreground="#2E7D32"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Items Section -->
                    <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                            CornerRadius="8" Padding="0" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Items Header -->
                            <Border Grid.Row="0" Background="#1A237E" CornerRadius="8,8,0,0" Padding="16,12,16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="📋" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="🛍️ SẢN PHẨM" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Grid.Column="2" Text="💰 ĐƠN GIÁ" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="📦 SL" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="💵 THÀNH TIỀN" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Items List -->
                            <DataGrid Grid.Row="1" x:Name="InvoiceItemsList" Margin="0" Background="White" BorderThickness="0" 
                                      AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="None" 
                                      GridLinesVisibility="Horizontal" RowHeaderWidth="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding RowNumber}" Width="50"/>
                                    <DataGridTextColumn Header="Sản phẩm" Binding="{Binding ProductName}" Width="*"/>
                                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat=F2}" Width="100"/>
                                    <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="80"/>
                                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding LineTotal, StringFormat=F2}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Totals Section -->
                    <Grid Grid.Row="3" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Notes -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="GHI CHÚ" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <TextBlock Text="Cảm ơn quý khách đã sử dụng dịch vụ của chúng tôi!" 
                                       FontSize="12" Foreground="#7F8C8D" TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <!-- Totals -->
                        <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tạm tính:" FontSize="12" Margin="0,0,10,6"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SubtotalText" Text="$0.00" FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Thuế:" FontSize="12" Margin="0,0,10,6"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TaxRateText" Text="0.00%" FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Số tiền thuế:" FontSize="12" Margin="0,0,10,6"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SalesTaxText" Text="$0.00" FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Giảm giá:" FontSize="12" Margin="0,0,10,6"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OtherText" Text="$0.00" FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,6"/>
                                
                                <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#E0E0E0" Height="1" Margin="0,6,0,6"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="TỔNG CỘNG:" FontSize="14" FontWeight="Bold" Margin="0,0,10,6"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TotalText" Text="$0.00" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,0,6"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Đã trả:" FontSize="12" Margin="0,0,10,0"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="PaidText" Text="$0.00" FontSize="12" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Payment QR Code Section -->
                    <Border Grid.Row="4" Background="#F8F9FA" CornerRadius="8" Padding="20" Margin="0,0,0,20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Payment Info -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="💳 THANH TOÁN QUA QR CODE" FontSize="16" FontWeight="Bold" 
                                           Foreground="#2E7D32" Margin="0,0,0,8"/>
                                <TextBlock Text="Quét mã QR để thanh toán nhanh chóng" FontSize="12" 
                                           Foreground="#666666" Margin="0,0,0,4"/>
                                <TextBlock Text="Hỗ trợ: MoMo, ZaloPay, TPBank, Ngân hàng khác" FontSize="11" 
                                           Foreground="#888888"/>
                            </StackPanel>
                            
                            <!-- QR Code -->
                            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="10" 
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <StackPanel>
                                    <Image x:Name="PaymentQRCode" Width="120" Height="120" 
                                           Stretch="Uniform" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Quét để thanh toán" FontSize="10" 
                                               Foreground="#666666" HorizontalAlignment="Center" 
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Footer -->
                    <Border Grid.Row="5" Background="#1A237E" CornerRadius="8" Padding="20" BorderBrush="#3949AB" BorderThickness="2">
                        <StackPanel>
                            <TextBlock Text="🙏 CẢM ƠN QUÝ KHÁCH!" FontSize="20" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="💝 Hẹn gặp lại quý khách lần sau!" FontSize="14" 
                                       Foreground="#E3F2FD" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="📞 Hotline: (028) 1234-5678 | 🌐 www.abc-company.com" FontSize="12" 
                                       Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="12" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📄" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Sẵn sàng in hóa đơn" FontSize="12" 
                               Foreground="#37474F" FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🖨️" FontSize="12" Margin="0,0,4,0"/>
                    <TextBlock Text="Nhấn Ctrl+P để in nhanh" FontSize="10" Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
