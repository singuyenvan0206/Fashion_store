<Window x:Class="WpfApp1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký tài khoản" Height="380" Width="520"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📝 Đăng ký tài khoản" FontSize="20" FontWeight="Bold" Foreground="#1CB5E0"/>

        <StackPanel Grid.Row="1" Margin="0,12,0,12">
            <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameTextBox" Height="32" Margin="0,4,0,12"/>

            <TextBlock Text="Tên nhân viên" FontWeight="SemiBold"/>
            <TextBox x:Name="EmployeeNameTextBox" Height="32" Margin="0,4,0,12"/>

            <TextBlock Text="Mật khẩu" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Height="32" Margin="0,4,0,12"/>

            <TextBlock Text="Xác nhận mật khẩu" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="32" Margin="0,4,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Đăng ký" Width="100" Height="34" Background="#4CAF50" Foreground="White" Margin="0,0,8,0" Click="RegisterButton_Click"/>
            <Button Content="Đăng nhập" Width="100" Height="34" Background="#9E9E9E" Foreground="White" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

