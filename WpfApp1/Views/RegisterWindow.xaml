<Window x:Class="WpfApp1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký"
        SizeToContent="WidthAndHeight"
        MinWidth="420"
        MinHeight="420"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#4FC3F7"
                                BorderThickness="2"
                                CornerRadius="16">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#4FC3F7"
                                BorderThickness="2"
                                CornerRadius="16">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FAD2D2">
        <Border
            MaxWidth="520"
            CornerRadius="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="24" Margin="24">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1CB5E0" Offset="0.0"/>
                    <GradientStop Color="#000046" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Đăng Ký" FontSize="26" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,16"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên đăng nhập" VerticalAlignment="Center" Foreground="#CCFFFFFF" Margin="0,0,8,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="UsernameTextBox" Height="40" Margin="0,0,0,12"
                         Background="#F0F0F0" BorderThickness="0"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Họ tên nhân viên" VerticalAlignment="Center" Foreground="#CCFFFFFF" Margin="0,0,8,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="EmployeeNameTextBox" Height="40" Margin="0,0,0,12"
                         Background="#F0F0F0" BorderThickness="0"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khẩu" VerticalAlignment="Center" Foreground="#CCFFFFFF" Margin="0,0,8,0"/>
                <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="PasswordBox" Height="40" Margin="0,0,0,12"
                             Background="#F0F0F0" BorderThickness="0"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Xác nhận" VerticalAlignment="Center" Foreground="#CCFFFFFF" Margin="0,0,8,0"/>
                <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="ConfirmPasswordBox" Height="40" Margin="0,0,0,16"
                             Background="#F0F0F0" BorderThickness="0"/>

                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Đăng Ký"
                            MinWidth="120"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#FF6A82FB"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,12,0"
                            Click="RegisterButton_Click"/>
                    <Button Content="Đăng Nhập"
                            MinWidth="120"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#4FC3F7"
                            Foreground="White"
                            BorderThickness="0"
                            Click="LoginButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
