<Window x:Class="WpfApp1.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Báo Cáo và Thống Kê" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid.Resources>
            <Style x:Key="RightAlignedCell" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Right"/>
            </Style>
            <Style x:Key="KpiCard" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="18"/>
                <Setter Property="Margin" Value="8"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Height="auto" Grid.Row="0" Background="#1CB5E0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📊 Báo Cáo và Thống Kê" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" - Phân tích doanh thu và hiệu suất" FontSize="14" Foreground="#E3F2FD" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔄 Làm mới" Width="100" Height="32" Background="#FF9800" Foreground="White" 
                            FontWeight="SemiBold" Margin="0,0,8,0" Click="RefreshButton_Click"/>
                    <Button x:Name="OpenSettingsButton" Content="⚙️ Cài đặt" Width="100" Height="32" Background="#9C27B0" Foreground="White" 
                            FontWeight="SemiBold" Click="OpenSettingsButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Margin="20,16,20,8" Background="White" CornerRadius="12" Padding="16" BorderBrush="#E0E0E0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- First row - Date and Customer filters -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="📅 Từ:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker x:Name="FromDatePicker" Grid.Column="1" Height="32" SelectedDateChanged="FilterChanged" Margin="6,0,0,0"/>
                    <TextBlock Grid.Column="2" Text="📅 Đến:" VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="ToDatePicker" Grid.Column="3" Height="32" SelectedDateChanged="FilterChanged" Margin="6,0,0,0"/>
                    <TextBlock Grid.Column="4" Text="👤 Khách hàng:" VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CustomerComboBox" Grid.Column="5" Height="32" DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="FilterChanged" Margin="6,0,0,0"/>
                    <TextBox x:Name="SearchTextBox" Grid.Column="6" Height="32" Margin="12,0,12,0" TextChanged="FilterChanged" 
                             ToolTip="🔍 Tìm theo mã KH, tên KH hoặc số hóa đơn" Padding="8,6"/>
                    <StackPanel Grid.Column="7" Orientation="Horizontal">
                        <Button Content="📥 Nhập CSV" Width="120" Height="32" Background="#FF9800" Foreground="White" 
                                FontWeight="SemiBold" Click="ImportCsvButton_Click" Margin="0,0,8,0"/>
                        <Button Content="📊 Xuất CSV" Width="120" Height="32" Background="#4CAF50" Foreground="White" 
                                FontWeight="SemiBold" Click="ExportCsvButton_Click"/>
                    </StackPanel>
                </Grid>
                
                <!-- Second row - Quick filters and actions -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="⚡ Lọc nhanh:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0"/>
                        <Button Content="📅 Hôm nay" Width="90" Height="28" Background="#2196F3" Foreground="White" 
                                FontWeight="SemiBold" Margin="0,0,4,0" Click="TodayButton_Click"/>
                        <Button Content="📅 7 ngày" Width="80" Height="28" Background="#2196F3" Foreground="White" 
                                FontWeight="SemiBold" Margin="0,0,4,0" Click="Last7DaysButton_Click"/>
                        <Button Content="📅 30 ngày" Width="80" Height="28" Background="#2196F3" Foreground="White" 
                                FontWeight="SemiBold" Margin="0,0,4,0" Click="Last30DaysButton_Click"/>
                        <Button Content="📅 Tháng này" Width="90" Height="28" Background="#2196F3" Foreground="White" 
                                FontWeight="SemiBold" Click="ThisMonthButton_Click"/>
                    </StackPanel>

                </Grid>
            </Grid>
        </Border>

        <!-- Data & Charts -->
        <Grid Grid.Row="2" Margin="20,0,20,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- KPI Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,8" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="📈 Doanh thu" Foreground="#777" FontSize="12"/>
                            <TextBlock Text="↗️ +12%" Foreground="#4CAF50" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="KpiRevenueText" Text="0₫" FontSize="22" FontWeight="Bold" Foreground="#059669" Margin="0,4,0,0"/>
                        <TextBlock Text="Tổng doanh thu" Foreground="#999" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="🧾 Số hóa đơn" Foreground="#777" FontSize="12"/>
                            <TextBlock Text="↗️ +8%" Foreground="#4CAF50" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="KpiInvoiceCountText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#0D9488" Margin="0,4,0,0"/>
                        <TextBlock Text="Hóa đơn đã tạo" Foreground="#999" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="👥 Khách hàng" Foreground="#777" FontSize="12"/>
                            <TextBlock Text="↗️ +5%" Foreground="#4CAF50" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="KpiCustomerCountText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#2563EB" Margin="0,4,0,0"/>
                        <TextBlock Text="Khách hàng mới" Foreground="#999" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="💸 Giảm giá" Foreground="#777" FontSize="12"/>
                            <TextBlock Text="↘️ -3%" Foreground="#F44336" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="KpiDiscountText" Text="0₫" FontSize="22" FontWeight="Bold" Foreground="#DC2626" Margin="0,4,0,0"/>
                        <TextBlock Text="Tổng giảm giá" Foreground="#999" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="4" Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="💰 Lợi nhuận" Foreground="#777" FontSize="12"/>
                            <TextBlock Text="↗️ +15%" Foreground="#4CAF50" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="KpiProfitText" Text="0₫" FontSize="22" FontWeight="Bold" Foreground="#FF9800" Margin="0,4,0,0"/>
                        <TextBlock Text="Lợi nhuận ròng" Foreground="#999" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Invoices DataGrid -->
            <Border Grid.Row="1" Background="White" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Grid Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="12,12,0,0" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="📋 Danh sách hóa đơn" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Tổng:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                <TextBlock x:Name="TotalInvoicesText" Text="0 hóa đơn" VerticalAlignment="Center" FontWeight="Bold" Foreground="#1CB5E0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <ScrollViewer Margin="0,45,0,20" Grid.RowSpan="2">
                        <DataGrid ScrollViewer.CanContentScroll="True" 
                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                            x:Name="InvoicesDataGrid"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            SelectionMode="Single"
                            EnableRowVirtualization="True"
                            EnableColumnVirtualization="True"
                            BorderThickness="0"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column" Height="435" Width="1238">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Id}" SortMemberPath="Id" Width="60" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Ngày" Binding="{Binding CreatedDate, StringFormat=yyyy-MM-dd HH:mm}" SortMemberPath="CreatedDate" Width="160" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Khách hàng" Binding="{Binding CustomerName}" SortMemberPath="CustomerName" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Tạm tính" Binding="{Binding Subtotal, StringFormat=N2}" SortMemberPath="Subtotal" Width="120" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Thuế" Binding="{Binding TaxAmount, StringFormat=N2}" SortMemberPath="TaxAmount" Width="110" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Giảm giá" Binding="{Binding Discount, StringFormat=N2}" SortMemberPath="Discount" Width="120" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Tổng cộng" Binding="{Binding Total, StringFormat=N2}" SortMemberPath="Total" Width="120" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Đã trả" Binding="{Binding Paid, StringFormat=N2}" SortMemberPath="Paid" Width="120" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="⚙️ Thao tác" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="👁️" Width="28" Height="24" Background="#2196F3" Foreground="White" 
                                                    FontWeight="Bold" Click="DetailsButton_Click" ToolTip="Xem chi tiết"/>
                                                <Button Content="🖨️" Width="28" Height="24" Background="#FF9800" Foreground="White" 
                                                    FontWeight="Bold" Margin="4,0,0,0" Click="PrintButton_Click" ToolTip="In hóa đơn"/>
                                                <Button Content="🗑️" Width="28" Height="24" Background="#F44336" Foreground="White" 
                                                    FontWeight="Bold" Margin="4,0,0,0" Click="DeleteButton_Click" ToolTip="Xóa hóa đơn"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                    </ScrollViewer>

                    <!-- Enhanced Pagination Controls -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="15" Margin="0,10,0,0" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Page Info -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📄 Trang:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                <TextBlock x:Name="ReportsPageInfoTextBlock" Text="1 / 1" FontWeight="Bold" Foreground="#1CB5E0"/>
                                <TextBlock Text=" • " Margin="10,0"/>
                                <TextBlock Text="📊 Tổng:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                <TextBlock x:Name="TotalReportsTextBlock" Text="0 hóa đơn" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>


                            <!-- Page Navigation -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="ReportsFirstPageButton" Content="⏮️" Width="35" Height="30" 
                                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                                        Click="ReportsFirstPageButton_Click" Margin="0,0,5,0"/>
                                <Button x:Name="ReportsPrevPageButton" Content="◀️" Width="35" Height="30" 
                                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                                        Click="ReportsPrevPageButton_Click" Margin="0,0,5,0"/>
                                <TextBox x:Name="ReportsCurrentPageTextBox" Width="50" Height="30" 
                                         TextAlignment="Center" VerticalContentAlignment="Center"
                                         FontWeight="Bold" Margin="0,0,5,0"
                                         KeyDown="ReportsCurrentPageTextBox_KeyDown"/>
                                <Button x:Name="ReportsNextPageButton" Content="▶️" Width="35" Height="30" 
                                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                                        Click="ReportsNextPageButton_Click" Margin="0,0,5,0"/>
                                <Button x:Name="ReportsLastPageButton" Content="⏭️" Width="35" Height="30" 
                                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                                        Click="ReportsLastPageButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Summary -->
        <Border Grid.Row="3" Margin="20,8,20,20" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusTextBlock" Text="Báo cáo được cập nhật lần cuối: " VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock x:Name="LastUpdateText" Text="Chưa có dữ liệu" VerticalAlignment="Center" Foreground="#666" Margin="4,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="8,4" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋 Số lượng:" FontWeight="SemiBold" Margin="0,0,4,0"/>
                            <TextBlock x:Name="CountTextBlock" FontWeight="Bold" Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E8F5E8" CornerRadius="6" Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💰 Doanh thu:" FontWeight="SemiBold" Margin="0,0,4,0"/>
                            <TextBlock x:Name="RevenueTextBlock" FontWeight="Bold" Foreground="#2E7D32"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
